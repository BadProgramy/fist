<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="File">
    <resultMap id="result" type="File">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="uniqueNameUUID" column="unique_nameuuid"/>
        <result property="extension" column="extension"/>
        <result property="date" column="date"/>
    </resultMap>

    <select id="selectAll" resultMap="result">
        SELECT * FROM files;
    </select>

    <insert id="add" parameterType="File">
        insert into files(date, extension, name, unique_nameuuid)
        values (#{date}, #{extension}, #{name}, #{uniqueNameUUID});
    </insert>

    <select id="getLastIdInsert" resultType="long">
        SELECT LAST_INSERT_ID() FROM files LIMIT 1;
    </select>

</mapper>